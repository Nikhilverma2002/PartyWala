<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF406C"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_back"
            app:tint="@color/white" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Payment"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tV_upi_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="UPI Payment Options"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tV_upi_pay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.furkanakdemir.surroundcardview.SurroundCardView
                android:id="@+id/google_pay"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_card"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toStartOf="@+id/admin"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/select"
                app:scv_color="#3C7A79"
                app:scv_duration="500"
                app:scv_startPoint="top_start"
                app:scv_surrounded="false"
                app:scv_width="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="Google Pay"
                    android:textColor="#313743"
                    android:textSize="15sp"
                    app:drawableLeftCompat="@drawable/ic_google"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

            </com.furkanakdemir.surroundcardview.SurroundCardView>

            <com.furkanakdemir.surroundcardview.SurroundCardView
                android:id="@+id/amazon_pay"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_card"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toStartOf="@+id/admin"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/select"
                app:scv_color="#3C7A79"
                app:scv_duration="500"
                app:scv_startPoint="top_start"
                app:scv_surrounded="false"
                app:scv_width="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="20dp"
                    android:text="AmazonPay"
                    android:textColor="#313743"
                    android:textSize="15sp"
                    app:drawableLeftCompat="@drawable/ic_amazon_pay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

            </com.furkanakdemir.surroundcardview.SurroundCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.furkanakdemir.surroundcardview.SurroundCardView
                android:id="@+id/phone_pay"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_card"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toStartOf="@+id/admin"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/select"
                app:scv_color="#3C7A79"
                app:scv_duration="500"
                app:scv_startPoint="top_start"
                app:scv_surrounded="false"
                app:scv_width="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="20dp"
                    android:text="PhonePe"
                    android:textColor="#313743"
                    android:textSize="15sp"
                    app:drawableLeftCompat="@drawable/ic_phone_pay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

            </com.furkanakdemir.surroundcardview.SurroundCardView>

            <com.furkanakdemir.surroundcardview.SurroundCardView
                android:id="@+id/bhim"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_card"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toStartOf="@+id/admin"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/select"
                app:scv_color="#3C7A79"
                app:scv_duration="500"
                app:scv_startPoint="top_start"
                app:scv_surrounded="false"
                app:scv_width="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="20dp"
                    android:text="BHIM UPI"
                    android:textColor="#313743"
                    android:textSize="15sp"
                    app:drawableLeftCompat="@drawable/ic_bhim"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

            </com.furkanakdemir.surroundcardview.SurroundCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.furkanakdemir.surroundcardview.SurroundCardView
                android:id="@+id/paytm"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_card"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toStartOf="@+id/admin"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/select"
                app:scv_color="#3C7A79"
                app:scv_duration="500"
                app:scv_startPoint="top_start"
                app:scv_surrounded="false"
                app:scv_width="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="20dp"
                    android:text="Paytm"
                    android:textColor="#313743"
                    android:textSize="15sp"
                    app:drawableLeftCompat="@drawable/ic_paytm_pay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

            </com.furkanakdemir.surroundcardview.SurroundCardView>

            <com.furkanakdemir.surroundcardview.SurroundCardView
                android:id="@+id/mobikwik"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_card"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toStartOf="@+id/admin"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/select"
                app:scv_color="#3C7A79"
                app:scv_duration="500"
                app:scv_startPoint="top_start"
                app:scv_surrounded="false"
                app:scv_width="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="20dp"
                    android:text="MobiKwik"
                    android:textColor="#313743"
                    android:textSize="15sp"
                    app:drawableLeftCompat="@drawable/ic_mobikwik"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

            </com.furkanakdemir.surroundcardview.SurroundCardView>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tV_other_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Other Payment Options"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <com.furkanakdemir.surroundcardview.SurroundCardView
        android:id="@+id/collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:background="@drawable/bg_card"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tV_other_pay"
        app:scv_color="#3C7A79"
        app:scv_duration="500"
        app:scv_startPoint="top_start"
        app:scv_surrounded="false"
        app:scv_width="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="15dp"
            android:fontFamily="@font/poppins_medium"
            android:padding="20dp"
            android:text="Card - UPI ID - Net Banking - Wallet"
            android:textColor="#313743"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </com.furkanakdemir.surroundcardview.SurroundCardView>

</androidx.constraintlayout.widget.ConstraintLayout>