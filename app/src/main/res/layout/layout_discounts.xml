<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_curve"
    android:backgroundTint="#60A5FA"
    android:layout_margin="10dp"
    android:padding="15dp"
    android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView

                android:id="@+id/imageView1"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:src="@drawable/logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:text="Code : STORE20"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView1"
                app:layout_constraintTop_toTopOf="@+id/imageView1"
                tools:ignore="RtlSymmetry" />


            <TextView
                android:id="@+id/percent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:gravity="start"
                android:text="20%"
                android:textColor="@color/white"
                android:textSize="64sp"
                app:layout_constraintStart_toStartOf="@+id/imageView1"
                app:layout_constraintTop_toBottomOf="@+id/imageView1"
                tools:ignore="RtlSymmetry" />


            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppins"
                android:gravity="start"
                android:text="FLAT\nDISCOUNT"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/percent1"
                app:layout_constraintStart_toEndOf="@+id/percent1"
                app:layout_constraintTop_toTopOf="@+id/percent1"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:gravity="start"
                android:text="On minumum purchase of â‚¹10000/-"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/percent1"
                app:layout_constraintTop_toBottomOf="@+id/percent1"
                tools:ignore="RtlSymmetry" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
